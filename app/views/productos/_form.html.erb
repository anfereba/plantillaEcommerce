<div class="container">
  <%= form_with(model: @producto, local:true) do |form| %>
    <div class="form-group">
      <%= form.label :nombre %>
      <%= form.text_field :nombre, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= form.label :descripcion %>
      <%= form.text_area :descripcion, class: 'form-control'  %>
    </div>
    <div class="form-group">
      <%= form.label :precio %>
      <%= form.text_field :precio, class: 'form-control'  %>
    </div>
    <div class="form-group">
      <% if @producto.image.attached? %>
        <%= image_tag @producto.image, style: "width: 200px; display:block" %>
      <% end %>
      <%= form.label :image %>
      <%= form.file_field :image, class: 'form-control'  %>
    </div>
    <div class="form-group">
      <%= form.label :category_id %>
      <%= form.text_field :category_id, class: 'form-control'  %>
    </div>
    <div>
      <%= form.submit class: 'btn btn-primary'%>
    </div>
  <% end %>
</div>
