<h1 class="text-center">Productos</h1>
<hr>
<div class="container">
  <div class="row">
    <div class="col-lg-11 col-md-6">
      <div class="row">
        <%= render @productos %>
      </div>
      <div class="text-center">
        <% if user_signed_in? && current_user.admin? %>
          <%= link_to "Insertar un producto", new_productos_path, class: "btn btn-success"%>
          <%= link_to "Ver categoria", categories_path, class: 'btn btn-warning' %>
        <%end %>
      </div>
    </div>
  </div>
</div>
</div>