<h1 class="text-center">Producto</h1>

<%= form_tag(productos_path, :method => "get",
             class: 'container h-100') do %>
  <div class="d-flex justify-content-center h-100">
    <div class="searchbar">
      <%= search_field_tag :search, params[:search], placeholder: "Buscar", class: "search_input" %>
      <%= button_tag "", :class => 'search_icon',:name => nil do %>
        <i class="fas fa-search"></i>
      <% end %>
    </div>
  </div>
<% end %>

<hr>
<div class="container">
  <div class="row">
    <div class="col-lg-11 col-md-6">
      <div class="row">
        <%= render @productos %>

      </div>
      <div class="text-center">
        <% if user_signed_in? && current_user.admin? %>
          <%= link_to "Insertar un producto", new_productos_path, class: "btn btn-success"%>
          <%= link_to "Ver categoria", categories_path, class: 'btn btn-warning' %>
        <%end %>
        <div id="card">
          <%= render 'cards/card' %>
        </div>
      </div>
    </div>
  </div>
</div>
</div>