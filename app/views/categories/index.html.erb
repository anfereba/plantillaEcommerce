<p id="notice"><%= notice %></p>

<div class="container">
  <h1 class="text-center pb-3">Categorias</h1>
<table class="table table-striped">
  <thead class="thead-dark">
    <tr>
      <th>Nombre</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.nombre %></td>
        <td><%= link_to 'Mostrar', category, class: 'btn btn-primary' %></td>
        <td><%= link_to 'Editar', edit_category_path(category), class: 'btn btn-warning' %></td>
        <td><%= link_to 'Eliminar', category, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<div class="text-center">
  <%= link_to 'Nueva Categoria', new_category_path, class: 'btn btn-success' %>
  <%= link_to 'Regresar', productos_path, class: 'btn btn-warning' %>
</div>

</div>